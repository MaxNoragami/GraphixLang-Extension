{
  "name": "graphixlang",
  "displayName": "GraphixLang",
  "description": "A Visual Studio Code extension for the GraphixLang language with support for .pixil files.",
  "version": "0.1.0",
  "publisher": "yourname",
  "engines": {
    "vscode": "^1.50.0"
  },
  "activationEvents": [
    "onLanguage:graphixlang"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "graphixlang",
        "aliases": ["GraphixLang", "graphixlang"],
        "extensions": [".pixil"],
        "configuration": "./language-configuration.json"
      }
    ],
    "snippets": [
      {
        "language": "graphixlang",
        "path": "./snippets/graphixlang.json"
      }
    ],
    "grammars": [
      {
        "language": "graphixlang",
        "scopeName": "source.graphixlang",
        "path": "./syntaxes/graphixlang.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./tsconfig.json",
    "watch": "tsc -watch -p ./tsconfig.json",
    "pretest": "npm run compile",
    "test": "node ./out/test/index.test.js"
  },
  "devDependencies": {
    "typescript": "^4.0.0",
    "vscode": "^1.50.0",
    "eslint": "^7.0.0",
    "mocha": "^8.0.0",
    "chai": "^4.0.0"
  },
  "dependencies": {
    "vscode-languageclient": "^7.0.0"
  }
}