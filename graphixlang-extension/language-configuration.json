{
    "comments": {
        "lineComment": "//",
        "blockComment": ["/*", "*/"],
        "folding": true
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingBrackets": "languageDefined",
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    "onEnterRules": [
        {
            "beforeText": "^\\s*\\*\\s*",
            "afterText": "^\\s*\\*\\s*",
            "action": {
                "indentAction": "Increase"
            }
        }
    ]
}