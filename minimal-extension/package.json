{
  "name": "graphixlang-minimal",
  "displayName": "GraphixLang Minimal",
  "description": "Minimal syntax highlighting for GraphixLang (.pixil) files",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.60.0"
  },
  "publisher": "demo",
  "categories": ["Programming Languages"],
  "main": "./extension.js",
  "activationEvents": [
    "onLanguage:graphixlang"
  ],
  "contributes": {
    "languages": [
      {
        "id": "graphixlang",
        "aliases": ["GraphixLang", "graphixlang"],
        "extensions": [".pixil"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "graphixlang",
        "scopeName": "source.graphixlang",
        "path": "./syntaxes/graphixlang.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "graphixlang.run",
        "title": "Run GraphixLang File",
        "icon": "$(play)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceExtname == .pixil && !notebookEditorFocused",
          "command": "graphixlang.run",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "GraphixLang",
      "properties": {
        "graphixlang.executablePath": {
          "type": "string",
          "default": "",
          "description": "Path to the GraphixLang executable. Leave empty to use the bundled executable."
        }
      }
    }
  }
}
